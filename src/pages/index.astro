---
import Layout from '../layouts/Layout.astro';
import ButtonSubmit from '../components/ButtonSubmit.svelte';
---

<Layout title="Movie Mind">
	<main class="container max-w-lg m-auto flex flex-col p-6">
	<header class="py-4">
		<h1 class="text-5xl font-bold text-white text-center">Movie Mind</h1>
	</header>

    <textarea id="text" class="flex-1 w-full px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border 
		border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" 
		placeholder="Enter your mood" name="comment" rows="5" cols="10"></textarea>
	<ButtonSubmit client:visible />
	</main>
</Layout>
